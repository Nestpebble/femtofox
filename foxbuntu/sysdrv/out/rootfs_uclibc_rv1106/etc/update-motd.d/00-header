#!/bin/sh
#

[ -r /etc/lsb-release ] && . /etc/lsb-release

#printf "\n"
echo "\e[92m                             @+               .**                            
                           -@@@@@            @@@@@#                          
                          #@@@@@            @@@@@@@@                         
                         @@@@@*           =@@@@@@@@@@:                       
                       .@@@@@.           %@@@@@  @@@@@#                      
                      *@@@@@            @@@@@@    %@@@@@                     
                     @@@@@%           :@@@@@-      -@@@@@                    
                    @@@@@-           #@@@@@          @@@@@+                  
                  =@@@@@            @@@@@@            @@@@@@                 
                 @@@@@@           .@@@@@=              *@@@@@                
                @@@@@+           +@@@@@                 .@@@@@+              
              :@@@@@            @@@@@@                    @@@@@@             
             #@@@@@            @@@@@*       POWERED        #@@@@@            
            @@@@@#           -@@@@@:                        :@@@@@-          
          .@@@@@.           %@@@@@                            @@@@@%         
            %@@               @@%                              @@@
\033[0m"


if [ -z "$DISTRIB_DESCRIPTION" ] && [ -x /usr/bin/lsb_release ]; then
	# Fall back to using the very slow lsb_release utility
	DISTRIB_DESCRIPTION=$(lsb_release -s -d)
fi

[ -r /etc/lsb-release ] && . /etc/lsb-release
foxbuntu_version=$(grep -oP 'major=\K[0-9]+' /etc/foxbuntu-release).$(grep -oP 'minor=\K[0-9]+' /etc/foxbuntu-release).$(grep -oP 'patch=\K[0-9]+' /etc/foxbuntu-release)$(grep -oP 'hotfix=\K[a-z]+' /etc/foxbuntu-release)
spaces=$((11 - ${#foxbuntu_version}))

# Print the result with the appropriate number of spaces
printf "                  Made for Femtofox  https://www.femtofox.com\n"
printf "               Foxbuntu v$foxbuntu_version%*s%s(%s)\n" $spaces "" "$DISTRIB_DESCRIPTION" "$(uname -r)"
printf "         For Femtofox, Foxbuntu and Meshtastic licenses, run \`license\`\n\n"

printf "IP address: $(hostname -I | sed 's/ / /g') Uptime:$(uptime -p | awk '{$1=""; print $0}' | sed -e 's/ day\b/d/g' -e 's/ hour\b/h/g' -e 's/ hours\b/h/g' -e 's/ minute\b/m/g' -e 's/ minutes\b/m/g' | sed 's/,//g')\n"